<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<div class="main">
  <div class="container">

    <div class="row">
      <%= form_for(@new_task) do |f| %>
        <div class="col-xs-8 col-md-10">
          <%= f.text_field :description, placeholder: "Things I gotta do..." %>
        </div>
        <div class="col-xs-4 col-md-2">
          <%= f.submit :task,  class: "btn" %>
        </div>
      <% end %>
    </div>

    <div class="row">
      <div class="col-xs-offset-3">
        <img id="li-tooltip" src="tooltip-list_item.png" alt="click to mark completed and remove" />
      </div>
    </div>

    <ul class="items" id="items">
      <li>Build a pirate ship</li>
      <% @tasks.each do |t| %>
        <li><%= t.description %></li>
      <% end %>
    </ul>

  </div>
</div>
